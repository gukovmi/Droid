<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loan.ui.fragment.CreateLoanFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarResult"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            app:title="" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".loan.ui.fragment.ResultFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/informationResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="Ваша заявка была успешно отправлена на рассмотрение! Ее статус вы можете отслеживать в личном кабинете." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/returnToPersonalAreaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_to_personal_area_button" />

    </LinearLayout>
</LinearLayout>